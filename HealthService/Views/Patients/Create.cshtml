                        <label class="control-label w-100" for="DiseaseId"><b>Disease:</b></label>
                        <div class="w-100">
                            @Html.DropDownList("DiseaseId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DiseaseId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group ml-auto col-sm-9 my-3">
                        <label class="control-label w-100" for="Status"><b>Status:</b></label>
                        <div class="w-100">
                            @Html.EnumDropDownListFor(model => model.Status, null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                </div>

                <div class="form-group w-100 my-4">
                    <div class="text-center">
                        <input type="submit" value="Create" class="btn btn-success px-4 py-2" /> 
                        @Html.ActionLink("Cancel", "Index", new { @area = "" }, new { @class = "btn btn-dark px-4 py-2" })
                    </div>
                </div>
            </div>
        }
    </div>


</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
