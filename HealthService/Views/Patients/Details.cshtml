@model HealthService.Models.Patient

@{
    ViewBag.Title = "Details";
}

<div class="mx-auto p-0 col-sm-12 card ">

    <div class="card-header bg-light">
        <h4 class="text-center mx-auto my-0">Patient's Information</h4>
    </div>

    <div class="container card-body">

        <div class="row ">

            <div class="col-sm-6">
                <dl class="dl-horizontal w-50 mx-auto">
                    <dd class="py-2" style="font-size: 18px;">
                        <b>Name:</b>
                        <span>@Html.DisplayFor(model => model.Name)</span>
                    </dd>

                    <div class="mt-3">
                        <dl>
                        <dd class="">
                            <b>Mother:</b>
                            <span>@Html.DisplayFor(model => model.Mother)</span>
                        </dd>

                        <dd class="">
                            <b>Father/Husband:</b>
                            <span>@Html.DisplayFor(model => model.Father_or_Husband)</span>
                        </dd>

                        <dd class="">
                            <b>Guardian:</b>
                            <span>@Html.DisplayFor(model => model.RelationwithGuardian)</span>
                        </dd>

                        <dd class="">
                            <b>Age:</b>
                            <span>@Html.DisplayFor(model => model.Age)</span>
                        </dd>

                        <dd class="">
                            <b>Occupation:</b>
                            <span>@Html.DisplayFor(model => model.Occupation)</span>
                        </dd>

                        <dd class="">
                            <b>Address:</b>
                            <span>@Html.DisplayFor(model => model.Address)</span>
                        </dd>
                        </dl>
                    </div>
                </dl>
            </div>

            <div class="col-sm-6">
                <dl class="dl-horizontal w-50 mx-auto">

                    <dd class="py-2 " style="font-size: 18px;">
                        <b>NID:</b>
                        <span>@Html.DisplayFor(model => model.NID)</span>
                    </dd>

                    <div class="mt-3">
                        <dl>
                            <dd class="">
                                <b>Contact:</b>
                                <span>@Html.DisplayFor(model => model.Contact)</span>
                            </dd>

                            <dd class="">
                                <b>Bank Acc.:</b>
                                <span>@Html.DisplayFor(model => model.BankAccount)</span>
                            </dd>

                            <dd class="">
                                <b>Disease:</b>
                                <span>@Html.DisplayFor(model => model.Disease.Name)</span>
                            </dd>

                            <dd class="">
                                <b>Upazilla:</b>
                                <span>@Html.DisplayFor(model => model.Upazilla.Name)</span>
                            </dd>


                            <dd class="">
                                <b>Status:</b>
                                <span>@Html.DisplayFor(model => model.Status)</span>
                            </dd>
                        </dl>
                    </div>
                </dl>
            </div>

        </div>
    </div>

</div>

<p class="text-center pt-3">
