@model IEnumerable<HealthService.Models.Upazilla>

@{
    ViewBag.Title = "Upazilla";
}

<div class="container pb-5">
    <h2 class="text-center mx-auto my-0">Upazilla</h2>
    <p>
        @Html.ActionLink("Add Upazilla", "Create", new { area = "" }, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="text-center">Operation</th>
                </tr>
            </thead>

            @{
                var i = 0;
            }
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th style="vertical-align: middle;">
                            @(++i)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="px-3 text-center">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info m-1" })
                            @*@Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning m-1" })*@
                            <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#myModal@(item.Id)">
                                Delete
                            </button>
                            <div class="modal fade" id="myModal@(item.Id)">
                                <div class="modal-dialog modal-sm modal-dialog-centered">
                                    <div class="modal-content">

                                        <!-- Modal body -->
                                        <div class="modal-body">
                                            <b>Are you sure you want to delete Upazilla: <text class="text-danger">@item.Name</text>?</b>
                                            <br>
                                            <br>
                                            <form action="/Upazillas/Delete/@item.Id" method="post" class="d-inline-block">
                                                @Html.AntiForgeryToken()
                                                <div class="form-actions no-color d-inline-block">
                                                    <input type="submit" value="Delete" class="btn btn-danger">
                                                </div>
                                            </form>
                                            <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
                                        </div>

                                    </div>
                                </div>
                            </div>

                           @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger m-1" })*@
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    
</div>
