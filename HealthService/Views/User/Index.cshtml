@model IEnumerable<HealthService.DataAccess.User>

@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <h2 class="text-center mx-auto my-0">User List</h2>

    <p>
        @Html.ActionLink("Register New", "Registration", new { area = "" }, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-light">

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Upazilla
                    </th>
                    <th>
                        User Role
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ActivationCode)
                    </th>*@
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Upazilla.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roles.FirstOrDefault().RoleName)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ActivationCode)
                        </td>*@
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new { @class = "btn btn-info m-1" })
                        <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#myModal@(item.UserId)">
                            Delete
                        </button>
                        <div class="modal fade" id="myModal@(item.UserId)">
                            <div class="modal-dialog modal-sm modal-dialog-centered">
                                <div class="modal-content">

                                    <!-- Modal body -->
                                    <div class="modal-body">
                                        <b>Are you sure you want to delete User: <text class="text-danger">@item.Username</text>?</b>
                                        <br>
                                        <br>
                                        <form action="/User/Delete/@item.UserId" method="post" class="d-inline-block">
                                            @Html.AntiForgeryToken()
                                            <div class="form-actions no-color d-inline-block">
                                                <input type="submit" value="Delete" class="btn btn-danger">
                                            </div>
                                        </form>
                                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cancel</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
    <div style="padding-bottom: 88px;"></div>
