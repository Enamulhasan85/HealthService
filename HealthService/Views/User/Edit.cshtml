@model HealthService.Models.RegistrationView

@{
    ViewBag.Title = "Edit";
}

<div class="col-sm-6 mx-auto">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal mx-auto p-3 bg-light">
            <h4 class="text-center">Edit User</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserId)

            <div class="col-sm-10 mx-auto">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.Message
                    </div>
                }
                <div class="form-group mx-auto">
                    <label class="control-label" for="UserName"><strong>Username:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control mw-100 " } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="FirstName"><strong>First Name:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control mw-100" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="LastName"><strong>Last Name:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control mw-100" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="Email"><strong>Email:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control mw-100" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @Html.ValidationMessage("ErrorEmail", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="Password"><strong>Password:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mw-100" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="ConfirmPassword"><strong>Confirm Password:</strong></label>
                    <div class="">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control mw-100" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group form-inline mx-auto my-4">
                    <label class="control-label" for="IsActive"><strong>IsActive:</strong></label>
                    <div class="ml-3 pt-1">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.IsActive)
                            @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="RoleId"><strong>User Role:</strong></label>
                    <div class="">
                        @Html.DropDownListFor(model => model.RoleId, null, null, htmlAttributes: new { @class = "form-control mw-100" })
                        @Html.ValidationMessageFor(model => model.RoleId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mx-auto">
                    <label class="control-label" for="UpazillaId"><strong>Upazilla:</strong></label>
                    <div class="">
                        @Html.DropDownList("UpazillaId", null, "", htmlAttributes: new { @class = "form-control mw-100" })
                        @Html.ValidationMessageFor(model => model.UpazillaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex">
                    <div class="mx-auto my-2">
                        <input type="submit" value="Save" class="btn btn-success px-4 py-2" />
           
                        @Html.ActionLink("Cancel", "Index",new { area = "" },new { @class = "btn btn-dark px-4 py-2" })
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<div style="padding-bottom: 88px;"></div>
