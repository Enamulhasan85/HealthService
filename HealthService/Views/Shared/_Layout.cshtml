<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@600&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - HealthCare.xyz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
    
    <style>
        td{
            vertical-align: middle!important;
            padding: 0.5rem!important;
        }
        ul > li > a {
            color: white !important;
            border-radius: 4px;
            background-color: #3596ff;
            font-size: 16px !important;
            margin: 6px;
            padding: 12px !important;
            transition: background-color .1s;
        }

        ul > li > a:hover {
            background-color: #007bff ;
        }

    </style>
</head>
<body style="padding-top: 96px; padding-bottom:0; min-height: 625px; position: relative;">

    <nav class="navbar navbar-expand-sm fixed-top bg-primary" >
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="far fa-plus"></i></span>
        </button>
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                @Html.ActionLink("HealthCare.xyz", "Index", "Home", new { area = "" }, new { @class = "navbar-brand ml-2 text-light", @style = "font-family: 'Caveat', cursive;" })
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (HttpContext.Current.User.IsInRole("systemadmin, admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("User", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (HttpContext.Current.User.IsInRole("systemadmin, admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Upazilla", "Index", "Upazillas", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Disease", "Index", "Diseases", new { area = "" }, new { @class = "nav-link" })</li>

                    }
                    @if (HttpContext.Current.User.IsInRole("systemadmin, admin, upazilla user"))
                    {
                        <li class="nav-item">@Html.ActionLink("Patient", "Index", "Patients", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
     </nav>

        <div class="container body-content">
            @RenderBody()
        </div>
        <footer class="text-center text-light bg-primary p-3" style="position: absolute; width: 100%; bottom: 0;">
            <p class="m-0">© 2021 - Md. Enamul Hasan</p>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
